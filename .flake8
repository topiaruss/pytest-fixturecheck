[flake8]
max-line-length = 100
extend-ignore = E203, W503, D100, D101, D104, D107, D401, E501
max-complexity = 10
exclude = .git,__pycache__,build,dist,tests/example_*.py
per-file-ignores =
    # Allow tests to import fixtures without using them directly
    tests/*: F401
    # Allow __init__ to import but not use
    */__init__.py: F401
    # Allow imports in decorator.py
    src/pytest_fixturecheck/decorator.py: F401
    # Allow imports in django.py
    src/pytest_fixturecheck/django.py: F401
    # Allow imports in plugin.py
    src/pytest_fixturecheck/plugin.py: F401
